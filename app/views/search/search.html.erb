<h1>Book Search</h1>
 
<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= select_tag "genre_id", options_from_collection_for_select(get_genres, "id", "name") %>
    <%= submit_tag "Go", name: nil %>
  </p>
<% end %>
<% if @books != [] %>
  <%= will_paginate  @books %>

  <div class="books">
    <% @books.each do |book| %>
      <%= render :partial => 'books/book', :locals => {:book => book._source} %>
    <% end %>
  <%= will_paginate  @books %>

<% end %>


