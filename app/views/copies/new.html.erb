<% provide(:title, "Create a copy") %>
<h1>Create copy</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@copy) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>


      <%= f.label :ISBN %>
      <%= f.text_field :ISBN, class: 'form-control' %>

      <%= f.label :edition %>
      <%= f.number_field :edition, class: 'form-control' %>

      <%= f.label :year_of_print %>
      <%= f.select :year_of_print,  (Time.zone.now.year - 150)..(Time.zone.now.year) %>

      <%= f.hidden_field :book_id, :value => params[:id] ? params[:id] : params[:copy][:book_id] %>

      <%= f.submit "Save new copy", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
