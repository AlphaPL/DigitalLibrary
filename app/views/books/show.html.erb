<% provide(:title, @book.title) %>
<div >
<table class="show_book">
    <tr>
      <td> Cover: </td>
      <td>
            <%= image_tag book.picture.url if @book.picture? %>
            <%= image_tag "temp.jpg" if !@book.picture? %>
      </td>
    </tr>
    <tr>
      <td> <strong> Title: </strong> </td> <td> <%= @book.title %> </td>
    </tr>
    <tr>
      <td> <strong> Author: </strong> </td> <td>  <%= @book.author %> </td>
    </tr>
    <tr>
      <td> <strong> Year of print: </strong> </td> <td>  <%= @book.year_of_print.year %> </td>
    </tr>

</table>
<h1> <strong> Synopsis: </strong> </h1>
<div class="synopsis_text">
  <%= @book.synopsis %> 
</div>
</div>
